{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist", // Directory for compiled JS files
    "rootDir": "src", // Directory for source TS files
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
